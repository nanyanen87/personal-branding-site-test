---
// Thursday - Type B: Generative / Organic | p5.js | Vivid
import { name, currentFocusList } from '../data/resources';
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thursday | {name}</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.9.0/p5.min.js"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'DM Sans', sans-serif;
      background: #000;
      color: #fff;
      overflow: hidden;
      min-height: 100vh;
    }

    #canvas-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }

    .organic-content {
      position: relative;
      z-index: 2;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      padding: 5vw;
      min-height: 100vh;
      pointer-events: none;
    }

    .organic-title {
      font-size: clamp(3rem, 8vw, 7rem);
      font-weight: 700;
      letter-spacing: -0.03em;
      background: linear-gradient(135deg, #ff006e 0%, #8338ec 50%, #3a86ff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 3rem;
      opacity: 0;
      animation: fadeSlideIn 1.2s cubic-bezier(0.34, 1.56, 0.64, 1) 0.3s forwards;
    }

    .organic-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      max-width: 600px;
    }

    .organic-item {
      font-size: clamp(1rem, 2vw, 1.3rem);
      font-weight: 400;
      line-height: 1.6;
      padding: 1.5rem;
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      opacity: 0;
      transform: translateX(-50px);
    }

    .organic-item:nth-child(1) {
      animation: fadeSlideIn 1s cubic-bezier(0.34, 1.56, 0.64, 1) 0.6s forwards;
      border-left: 3px solid #ff006e;
    }

    .organic-item:nth-child(2) {
      animation: fadeSlideIn 1s cubic-bezier(0.34, 1.56, 0.64, 1) 0.8s forwards;
      border-left: 3px solid #8338ec;
    }

    .organic-item:nth-child(3) {
      animation: fadeSlideIn 1s cubic-bezier(0.34, 1.56, 0.64, 1) 1s forwards;
      border-left: 3px solid #3a86ff;
    }

    .organic-item:nth-child(4) {
      animation: fadeSlideIn 1s cubic-bezier(0.34, 1.56, 0.64, 1) 1.2s forwards;
      border-left: 3px solid #fb5607;
    }

    .organic-nav {
      margin-top: 3rem;
      padding: 1rem 2rem;
      background: rgba(255, 0, 110, 0.8);
      color: #fff;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 500;
      font-size: 1rem;
      pointer-events: all;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      opacity: 0;
      animation: fadeSlideIn 1s cubic-bezier(0.34, 1.56, 0.64, 1) 1.4s forwards;
    }

    .organic-nav:hover {
      background: rgba(131, 56, 236, 0.8);
      transform: translateX(-10px) scale(1.05);
    }

    @keyframes fadeSlideIn {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @media (max-width: 768px) {
      .organic-content {
        padding: 2rem;
      }
    }
  </style>
</head>
<body>
  <div id="canvas-container"></div>

  <div class="organic-content">
    <h1 class="organic-title">{name}</h1>

    <div class="organic-list">
      {currentFocusList.map(item => (
        <div class="organic-item">{item}</div>
      ))}
    </div>

    <a href="/" class="organic-nav">‚Üê Home</a>
  </div>

  <script>
    // @ts-nocheck
    // Type B: Vivid organic blob morphing
    let blobs = [];

    function setup() {
      let canvas = createCanvas(windowWidth, windowHeight);
      canvas.parent('canvas-container');
      noStroke();

      // Create multiple organic blobs
      for (let i = 0; i < 5; i++) {
        blobs.push(new Blob());
      }
    }

    function draw() {
      background(0, 20);

      for (let blob of blobs) {
        blob.update();
        blob.display();
      }
    }

    class Blob {
      constructor() {
        this.x = random(width);
        this.y = random(height);
        this.r = random(100, 200);
        this.xSpeed = random(-0.5, 0.5);
        this.ySpeed = random(-0.5, 0.5);
        this.colors = [
          color(255, 0, 110),
          color(131, 56, 236),
          color(58, 134, 255),
          color(251, 86, 7),
          color(255, 200, 0)
        ];
        this.color = random(this.colors);
        this.angle = 0;
      }

      update() {
        this.x += this.xSpeed;
        this.y += this.ySpeed;
        this.angle += 0.01;

        if (this.x > width || this.x < 0) this.xSpeed *= -1;
        if (this.y > height || this.y < 0) this.ySpeed *= -1;
      }

      display() {
        push();
        translate(this.x, this.y);

        fill(red(this.color), green(this.color), blue(this.color), 30);

        beginShape();
        for (let a = 0; a < TWO_PI; a += 0.1) {
          let xoff = map(cos(a + this.angle), -1, 1, 0, 1);
          let yoff = map(sin(a + this.angle), -1, 1, 0, 1);
          let r = this.r + noise(xoff, yoff, frameCount * 0.01) * 100;
          let x = r * cos(a);
          let y = r * sin(a);
          vertex(x, y);
        }
        endShape(CLOSE);

        pop();
      }
    }

    function windowResized() {
      resizeCanvas(windowWidth, windowHeight);
    }
  </script>
</body>
</html>

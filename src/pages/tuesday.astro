---
// Tuesday Page - リソースプール方式（bio、リンク中心の別schema）
import { name, bio, companyLink, blogLink, githubLink } from '../data/resources';
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tuesday | {name}</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Georgia', 'Times New Roman', serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 3rem;
      max-width: 700px;
      width: 100%;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    }

    .name-badge {
      display: inline-block;
      background: rgba(255, 255, 255, 0.2);
      padding: 0.5rem 1.5rem;
      border-radius: 50px;
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 2rem;
      letter-spacing: 0.05em;
    }

    .bio-text {
      font-size: 1.1rem;
      line-height: 1.9;
      margin-bottom: 2.5rem;
      text-align: justify;
      color: rgba(255, 255, 255, 0.95);
    }

    .links-container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .link-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: rgba(255, 255, 255, 0.15);
      padding: 1rem 1.5rem;
      border-radius: 12px;
      text-decoration: none;
      color: #ffffff;
      transition: all 0.3s ease;
      border: 1px solid transparent;
    }

    .link-item:hover {
      background: rgba(255, 255, 255, 0.25);
      border-color: rgba(255, 255, 255, 0.4);
      transform: translateX(10px);
    }

    .link-label {
      font-weight: 500;
      font-size: 1.1rem;
    }

    .link-arrow {
      font-size: 1.5rem;
      opacity: 0.7;
    }

    .nav-link {
      display: inline-block;
      margin-top: 2rem;
      padding: 0.75rem 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      color: #ffffff;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .nav-link:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  </style>
</head>
<body>
  <div class="card">
    <div class="name-badge">{name}</div>
    <p class="bio-text">{bio}</p>

    <div class="links-container">
      <a href={companyLink.url} class="link-item" target="_blank" rel="noopener">
        <span class="link-label">{companyLink.label}</span>
        <span class="link-arrow">→</span>
      </a>
      <a href={blogLink.url} class="link-item" target="_blank" rel="noopener">
        <span class="link-label">{blogLink.label}</span>
        <span class="link-arrow">→</span>
      </a>
      <a href={githubLink.url} class="link-item" target="_blank" rel="noopener">
        <span class="link-label">{githubLink.label}</span>
        <span class="link-arrow">→</span>
      </a>
    </div>

    <a href="/" class="nav-link">← Back to Home</a>
  </div>
</body>
</html>

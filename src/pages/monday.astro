---
// Monday Page - リソースプール方式（名前とスキルのみ使用）
import { name, coreStack } from '../data/resources';
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Monday | {name}</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      background: #1a1a2e;
      color: #eee;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .container {
      text-align: center;
      max-width: 800px;
      width: 100%;
    }

    h1 {
      font-size: clamp(3rem, 8vw, 6rem);
      font-weight: 700;
      letter-spacing: -0.02em;
      margin-bottom: 2rem;
      color: #00d9ff;
      text-shadow: 0 0 20px rgba(0, 217, 255, 0.5);
    }

    .subtitle {
      font-size: clamp(1.2rem, 2.5vw, 1.8rem);
      color: #aaa;
      font-weight: 400;
      margin-bottom: 3rem;
    }

    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
      margin: 2rem 0;
    }

    .skill-card {
      background: rgba(0, 217, 255, 0.1);
      border: 1px solid rgba(0, 217, 255, 0.3);
      padding: 1.5rem 1rem;
      border-radius: 8px;
      font-weight: 500;
      font-size: 0.95rem;
      transition: all 0.3s ease;
    }

    .skill-card:hover {
      background: rgba(0, 217, 255, 0.2);
      border-color: #00d9ff;
      transform: translateY(-5px);
      box-shadow: 0 5px 20px rgba(0, 217, 255, 0.3);
    }

    .nav-link {
      display: inline-block;
      margin-top: 3rem;
      padding: 0.75rem 1.5rem;
      background: transparent;
      border: 1px solid #00d9ff;
      color: #00d9ff;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      background: #00d9ff;
      color: #1a1a2e;
      transform: translateY(-2px);
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>{name}</h1>
    <p class="subtitle">Core Technology Stack</p>
    <div class="skills-grid">
      {coreStack.map(skill => (
        <div class="skill-card">{skill}</div>
      ))}
    </div>
    <a href="/" class="nav-link">← Back to Home</a>
  </div>
</body>
</html>
